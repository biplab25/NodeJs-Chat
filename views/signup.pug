extends base
block content 
  #login-form-wrap
    h2 SignUp
    form(method='POST' action='/signup')
      p
        input#username(type='text' name='username' placeholder='Username' required='')
      p
        input#email(type='email' name='email' placeholder='Email Address' required='')
      p
        input#password(type='password' name='password' placeholder='Password' required='') 
      p
        input#passwordConfirm(type='password' name='passwordConfirm' placeholder='Confirm Password' required='')  
      p
        input#signup(type='submit' value='SIGN UP')
    #create-account-wrap
      p
        | Already have an account ? 
        a(href='#') LogIn 
      p
      